<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pic url</th>
    <th>Free money</th>
    <th>Invested money</th>
    <th>Analytics url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.pic_url %></td>
    <td><%= user.free_money %></td>
    <td><%= user.invested_money %></td>
    <td><%= user.analytics_url %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

